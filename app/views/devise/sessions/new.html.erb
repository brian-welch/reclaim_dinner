<style>
  .sign-up-login-form-container {
    padding: 10px;
    border-radius: 3px;
    box-shadow: 0 0 0 1px rgba(76, 175, 178, 1), 0 0 50px rgba(0, 0, 0, 0.15);
    margin: 30px 0;
    background-color: rgba(76, 175, 178, 0.1);;
  }
  .sign-up-login-form-container > h2 {
    font-size: 36px;
    text-align: center;
    margin: 10px 0;
  }

</style>

<div class="container">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="sign-up-login-form-container">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary rd-button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

